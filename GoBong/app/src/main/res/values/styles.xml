<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Chip -->
    <style name="Widget.GoBong.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/black</item>>
        <item name="android:textAppearance">@style/TextAppearance.GoBong.SemiBold10</item>
        <item name="chipStrokeColor">@color/gray1</item>
    </style>

    <style name="Widget.GoBong.Chip.RecipeStepTool">
        <item name="chipBackgroundColor">@color/gray1</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipMinTouchTargetSize">20dp</item>
        <item name="chipMinHeight">16dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="android:textColor">@color/charcoal_color</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.Chip.RecipeStepTool
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.Chip.RecipeStepTool" parent="">
        <item name="chipCornerRadius">0dp</item>
    </style>

    <style name="Widget.GoBong.Chip.Added">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinTouchTargetSize">40dp</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIcon">@drawable/icon_close</item>
        <item name="closeIconTint">@color/primary_color</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textAppearance">@style/TextAppearance.GoBong.Regular14</item>
        <item name="chipStrokeColor">@color/primary_color</item>
    </style>

    <style name="Widget.GoBong.Chip.Add">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipMinTouchTargetSize">40dp</item>
        <item name="android:textColor">@color/charcoal_color</item>
        <item name="android:textAppearance">@style/TextAppearance.GoBong.Regular14</item>
        <item name="chipStrokeColor">@color/charcoal_color</item>
    </style>

    <style name="Widget.GoBong.EditText.IngredientAdd" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_chip</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="maxLine">1</item>
        <item name="android:textAppearance">@style/TextAppearance.GoBong.Regular14</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.EditText
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.EditText" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.GoBong.Chip.Time">
        <item name="chipBackgroundColor">@color/charcoal_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.GoBong.Regular14</item>
    </style>

    <style name="Widget.GoBong.Chip.Filter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_checked_background</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipMinTouchTargetSize">40dp</item>
        <item name="android:textColor">@color/selector_checked_text</item>
        <item name="android:textAppearance">@style/TextAppearance.GoBong.Regular14</item>
        <item name="chipStrokeColor">@color/selector_checked</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Toggle -->
    <style name="Widget.GoBong.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.GoBong.Regular14</item>
        <item name="android:textColor">@color/selector_checked_text</item>
        <item name="backgroundTint">@color/selector_checked_background</item>
        <item name="strokeColor">@color/selector_checked</item>
    </style>

    <!-- BottomSheet -->
    <style name="ThemeOverlay.GoBong.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <!-- Button -->
    <style name="Widget.GoBong.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GoBong.Button</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.GoBong.Button.Big">
        <item name="android:textAppearance">@style/TextAppearance.GoBong.SemiBold16</item>
    </style>

    <style name="Widget.GoBong.Button.Small">
        <item name="android:textAppearance">@style/TextAppearance.GoBong.SemiBold12</item>
    </style>

    <style name="ThemeOverlay.GoBong.Button" parent="">
        <item name="colorPrimary">@color/selector_enable</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>